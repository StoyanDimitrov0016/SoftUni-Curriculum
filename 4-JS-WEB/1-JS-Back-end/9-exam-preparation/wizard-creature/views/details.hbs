<main>
    <section id="details-page">
        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>Name: {{animal.name}}</h1>
                    <h3>Created by an author: {{animal.authorNames}}</h3>
                    <div class="card_character">
                        <p class="card-species">Species: {{animal.species}}</p>
                        <p class="card-skin">Skin colour: {{animal.skinColor}}</p>
                        <p class="card-eye">Eye Colour: {{animal.eyeColor}}</p>
                    </div>

                    <p class="disc">Description: {{animal.description}}</p>

                    <!-- If there is no registered user, do not display buttons-->

                    {{#if email}}
                    <div class="social-btn">
                        {{#if animal.isOwner}}
                        <a href="#" class="edit-btn">Edit</a>
                        <a href="#" class="del-btn">Delete</a>
                        {{else}}

                        {{#if animal.isVoted}}
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        {{else}}
                        <a href="post/vote/{{animal._id}}" class="vote-up">Vote</a>
                        {{/if}}

                        {{/if}}
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="card_right">
                <img src="{{animal.imageUrl}}" alt="image">
            </div>
        </div>
    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                        <p class="PV">Total rating of votes: {{animal.votes.length}}</p>
                    </div>

                    {{#if animal.votes}}
                    <p class="disc">People who voted for the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>
                    {{else}}
                    <p class="disc">People who voted for the post - No one has voted yet.</p>
                    {{/if}}

                </div>
            </div>
        </div>
    </section>
</main>