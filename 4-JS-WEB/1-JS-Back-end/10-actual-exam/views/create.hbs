<section id="createPage">
    <form id='createForm' action="/offer/create" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Name..." value="{{electronic.name}}">

        <label for="type">Type:</label>
        <input type="text" id="type" name="type" placeholder="Type..." value="{{electronic.type}}">

        <label for="production">Year of Production:</label>
        <input type="number" id="production" name="production" placeholder="Year of Production..."
            value="{{electronic.production}}">

        <label for="exploitation">Years of Exploitation:</label>
        <input type="number" id="exploitation" name="exploitation" placeholder="Year of Exploitation..."
            value="{{electronic.exploitation}}">

        <label for="damages">Damages:</label>
        <input type="text" id="damages" name="damages" placeholder="Damages..." value="{{electronic.damages}}">

        <label for="image">Image:</label>
        <input type="text" id="image" name="imageUrl" placeholder="Image..." value="{{electronic.imageUrl}}">

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" placeholder="Price..." value="{{electronic.price}}">

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" placeholder="Description..."
            value="{{electronic.description}}">

        <input type="submit" class="create" value="Create Offer">
    </form>
</section>